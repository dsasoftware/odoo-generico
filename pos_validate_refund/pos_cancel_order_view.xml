<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_pos_pos_form">
            <field name="name">pos.order</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='refund']" position="replace">
                    <button name="refund" string="Return Products" type="object"
                            attrs="{'invisible':[('state','=','draft')]}"
                            confirm="¿Seguro de realizar la devolución del producto?"
                            />
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_pos_order_tree">
            <field name="name">pos.order</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_refund" invisible="1"/>
                </xpath>
                <xpath expr="//tree[@string='POS Orders']" position="attributes">
                    <attribute name="colors">#B80000:(is_refund == True);blue:state == 'draft';gray:state in ('done','cancel');black:state not in('done','cancel')</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
